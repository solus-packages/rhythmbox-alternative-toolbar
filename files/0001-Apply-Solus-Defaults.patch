-            <default>0</default>
+            <default>1</default>
             <summary>Type of display</summary>
             <description>Type of display</description>
         </key>
@@ -23,7 +23,7 @@
             <description>Show album/genre/year for playing label</description>
         </key>
         <key type="b" name="volume-control">
-            <default>false</default>
